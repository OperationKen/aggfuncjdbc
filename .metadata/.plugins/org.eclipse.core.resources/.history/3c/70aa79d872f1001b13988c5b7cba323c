package pres;

import java.sql.SQLException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;
import java.util.Scanner;

public class demo {
	
	static String url = "jdbc:mysql://localhost:3306/presentation2";
	static String username = "root";
	static String password = "root";
	
	public static void main(String[] args) throws ClassNotFoundException, SQLException {
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection conn = DriverManager.getConnection(url, username, password);
		Statement stmt = conn.createStatement();
		
		Scanner inputter = new Scanner(System.in);
		
		//average
		//String query = "SELECT AVG(grade) FROM grades";
		
		//sum
		//String query = "SELECT SUM(grade) FROM grades";
		
		String query = "";
		ResultSet rs;
		int input = 0;
		do {
			
			input = inputter.nextInt();
			
			switch(input) {
			case 1:
				query = "SELECT SUM(grade) FROM grades";
				rs = stmt.executeQuery(query);
				System.out.println(rs.getInt(1));
				break;
			case 2:
				query = "SELECT AVG(grade) FROM grades";
				rs = stmt.executeQuery(query);
				System.out.println(rs.getFloat(1));
			}
			
		}while(input != 0);
		/*ResultSet rs = stmt.executeQuery(query);
		
		while(rs.next()) {
			//double ad = rs.getDouble("grade");
			System.out.println(rs.getInt(1));
		}*/
		conn.close();
	}
}
